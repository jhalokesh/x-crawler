{
    "name": "x-crawler",
    "version": "1.0.0",
    "description": "Crawler for Discovering Product URLs on E-commerce Websites",
    "main": "src/server.ts",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "test": "jest --runInBand",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "change-log:prepare": "git status > changes.git && git diff --cached >> changes.git",
        "change-log:remove": "rm changes.git",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jhalokesh/x-crawler.git"
    },
    "author": "Lokesh Jha <jhalokesh.dev@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jhalokesh/x-crawler/issues"
    },
    "homepage": "https://github.com/jhalokesh/x-crawler#readme",
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/express": "^5.0.0",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.14",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.10.2",
        "@types/supertest": "^6.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.17.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.3.0",
        "nodemon": "^3.1.9",
        "prettier": "3.4.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.18.2"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "bullmq": "^5.34.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "http-errors": "^2.0.0",
        "ioredis": "^5.4.2",
        "jsdom": "^25.0.1",
        "mongoose": "^8.9.3",
        "uuid": "^11.0.3"
    }
}
